<%= form_with(model: @gallery, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'text-info' %><br>
    <%= form.text_field :name, autofocus: true, class: 'form-control', autocomplete: "off" %>
  </div>
  <div class="form-group">
    <%= form.label :gallery_images, class: 'text-info' %><br>
    <%= form.file_field :gallery_images, autofocus: true, class: 'form-control-file', autocomplete: "off" %>
  </div>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
