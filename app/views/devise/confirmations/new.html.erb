<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <div id="login">
    <div class="container">
      <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
          <div class="jumbotron">
            <div class="login-box col-md-12">
              <% if devise_error_messages!.present? %>
                <div class="alert alert-danger">
                  <%= devise_error_messages! %>
                </div>
              <% end %>
              <form id="login-form" class="form" action="" method="post">
                <h3 class="text-center text-info"><%= I18n.t('devise.confirmations.new.resend_confirmation_instructions') %></h3>
                <div class="form-group">
                  <label for="email" class="text-info"><%= I18n.t('devise.confirmations.new.email') %>:</label><br>
                  <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
                </div>
                <div class="row">
                  <div class="col">
                    <%= f.submit "#{I18n.t('devise.confirmations.new.resend_confirmation_instructions')}", class: 'btn btn-primary'%>
                  </div>
                  <div class="col">
                    <div id="register-link" class="text-right">
                      <%= render "devise/shared/links" %>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


<% end %>