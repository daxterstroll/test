<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="login">
    <div class="container">
      <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
          <div class="jumbotron">
            <div class="login-box col-md-12">
              <% if alert.present? %>
                <div class="alert alert-danger">
                  <%= alert %>
                </div>
              <% end %>
              <form id="login-form" class="form" action="" method="post">
                <h3 class="text-center text-info"><%= I18n.t('devise.sessions.new.sign_in') %></h3>
                <div class="form-group">
                  <label for="username" class="text-info"><%= I18n.t('devise.sessions.new.email') %>:</label><br>
                  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'form-control', autocomplete: "email" %>
                </div>
                <div class="form-group">
                  <label for="password" class="text-info"><%= I18n.t('devise.sessions.new.password') %>:</label><br>
                  <%= f.password_field :password, placeholder: "Password", class: 'form-control', autocomplete: "off" %>
                </div>
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label "#{I18n.t('devise.sessions.new.remember_me')}" %>
                  </div>
                <% end -%>
                <div class="row">
                  <div class="col">
                    <%= f.button "#{I18n.t('devise.sessions.new.enter')}", class: 'btn btn-primary' %>
                  </div>
                  <div class="col">
                    <div id="register-link" class="text-right">
                      <%= render "devise/shared/links" %>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>