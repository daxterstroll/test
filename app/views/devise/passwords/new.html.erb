<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div id="login">
    <div class="container">
      <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
          <div class="jumbotron">
            <div class="login-box col-md-12">
              <% if devise_error_messages!.present? %>
                <div class="alert alert-danger">
                  <%= devise_error_messages! %>
                </div>
              <% end %>
              <form id="login-form" class="form" action="" method="post">
                <h3 class="text-center text-info"><%= I18n.t('devise.passwords.new.forgot_your_password') %></h3>
                <div class="form-group">
                  <label for="email" class="text-info"><%= I18n.t('devise.passwords.new.email') %>:</label><br>
                  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'form-control', autocomplete: "email" %>
                </div>
                <div class="form-group">
                  <%= f.button "#{I18n.t('devise.passwords.new.send_me_reset_password_instructions')}", class: 'btn btn-primary' %>
                </div>
                <div id="register-link" class="text-right">
                  <%= render "devise/shared/links" %>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>